<%-
include('partials/header', {
  meta: {
    title: richTextAsPlain(blogHomeDocument.data.meta_title),
    description: richTextAsPlain(blogHomeDocument.data.meta_description),
    social: blogHomeDocument.data.social,
    canonicalUrl: getCanonicalUrl(blogHomeDocument)
  }
});
%>

<div class="l-wrapper">
  <hr class="separator-hr"/>
</div>

<section class="blog-home-section">
  <div class="blog-home-posts-wrapper">
    <% blogPostDocuments.forEach(function (document) { %>
      <div class="blog-home-post-wrapper">
        <article>
          <img class="blog-home-post-image" src="<%= document.data.image.url %>" alt="<%= document.data.image.alt %>"/>
          <p class="blog-home-post-title">
            <%= richTextAsPlain(document.data.title) %>
          </p>
          <p class="blog-home-post-excerpt">
            <%= richTextAsPlain(document.data.excerpt).substring(0, 158) %> â€¦
          </p>
          <div class="blog-home-post-button-wrapper">
            <a class="a-button" href="<%= linkResolver(document) %>">
              Read post
            </a>
          </div>
        </article>
      </div>
    <% }); %>
  </div>
</section>

<div data-wio-id="<%= blogHomeDocument.id %>"></div>

<%- include('partials/footer'); %>
